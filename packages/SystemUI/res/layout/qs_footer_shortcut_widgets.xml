<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:id="@+id/qs_footer_shortcut_widgets"
    android:layout_width="0dp"
    android:layout_height="170dp"
    android:layout_weight="1.0"
    android:layout_marginStart="8dp"
    android:backgroundTint="?attr/offStateColor">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:layout_marginEnd="@dimen/qs_widget_shortcut_icon_side_padding">
                    <com.android.systemui.statusbar.AlphaOptimizedImageView
                        android:gravity="center"
                        android:id="@+id/qs_flashlight"
                        android:background="@drawable/qs_footer_action_circle"
                        android:padding="@dimen/qs_widget_shortcut_icon_padding"
                        android:focusable="true"
                        android:clickable="true"
                        android:layout_width="@dimen/qs_footer_circle_size"
                        android:layout_height="@dimen/qs_footer_circle_size"
                        android:layout_marginTop="@dimen/qs_widgets_icon_top_margin"
                        android:layout_marginBottom="@dimen/qs_widgets_icon_bottom_margin"
                        android:src="@drawable/ic_flashlight_off"
                        android:tint="?android:attr/textColorPrimary" />
                    <com.android.systemui.statusbar.AlphaOptimizedImageView
                        android:gravity="center"
                        android:id="@+id/qs_clock_timer"
                        android:background="@drawable/qs_footer_action_circle"
                        android:padding="@dimen/qs_widget_shortcut_icon_padding"
                        android:focusable="true"
                        android:clickable="true"
                        android:layout_width="@dimen/qs_footer_circle_size"
                        android:layout_height="@dimen/qs_footer_circle_size"
                        android:layout_marginTop="@dimen/qs_widgets_icon_top_margin"
                        android:layout_marginBottom="@dimen/qs_widgets_icon_bottom_margin"
                        android:src="@drawable/ic_alarm"
                        android:tint="?android:attr/textColorPrimary"
                        android:contentDescription="@string/accessibility_quick_settings_edit" />
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:layout_marginStart="@dimen/qs_widget_shortcut_icon_side_padding">
                    <com.android.systemui.statusbar.AlphaOptimizedImageView
                        android:gravity="center"
                        android:id="@+id/qs_calculator"
                        android:background="@drawable/qs_footer_action_circle"
                        android:padding="@dimen/qs_widget_shortcut_icon_padding"
                        android:focusable="true"
                        android:clickable="true"
                        android:layout_width="@dimen/qs_footer_circle_size"
                        android:layout_height="@dimen/qs_footer_circle_size"
                        android:layout_marginTop="@dimen/qs_widgets_icon_top_margin"
                        android:layout_marginBottom="@dimen/qs_widgets_icon_bottom_margin"
                        android:src="@drawable/ic_calculator"
                        android:tint="?android:attr/textColorPrimary" />
                    <com.android.systemui.statusbar.AlphaOptimizedImageView
                        android:gravity="center"
                        android:id="@+id/qs_camera"
                        android:background="@drawable/qs_footer_action_circle"
                        android:padding="@dimen/qs_widget_shortcut_icon_padding"
                        android:focusable="true"
                        android:clickable="true"
                        android:layout_width="@dimen/qs_footer_circle_size"
                        android:layout_height="@dimen/qs_footer_circle_size"
                        android:layout_marginTop="@dimen/qs_widgets_icon_top_margin"
                        android:layout_marginBottom="@dimen/qs_widgets_icon_bottom_margin"
                        android:src="@drawable/ic_camera"
                        android:tint="?android:attr/textColorPrimaryInverse"
                        android:backgroundTint="?android:attr/colorAccent" />
                </LinearLayout>
            </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.android.systemui.statusbar.AlphaOptimizedImageView
                android:gravity="center"
                android:id="@+id/widgets_indicator_page1"
                android:layout_width="@dimen/qs_widgets_page_indicator_size"
                android:layout_height="@dimen/qs_widgets_page_indicator_size"
                android:layout_marginEnd="4dp"
                android:src="@drawable/viewpager_dot_unselected" />
            <com.android.systemui.statusbar.AlphaOptimizedImageView
                android:gravity="center"
                android:id="@+id/widgets_indicator_page2"
                android:layout_width="@dimen/qs_widgets_page_indicator_size"
                android:layout_height="@dimen/qs_widgets_page_indicator_size"
                android:src="@drawable/viewpager_dot_selected" />
        </LinearLayout>
</LinearLayout>
